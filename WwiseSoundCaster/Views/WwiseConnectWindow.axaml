<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WwiseSoundCaster.ViewModels"
        xmlns:conv="using:WwiseSoundCaster.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="300"
        x:Class="WwiseSoundCaster.Views.WwiseConnectWindow"
        x:DataType="vm:WwiseConnectWindowViewModel"
        Title="Connection Wizard"
        SizeToContent="WidthAndHeight"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        Background="#222225"
        Icon="/Assets/soundboard.ico">

    <!-- ═══════════════════════════════════════════════════════════
         RESOURCES – Converters
         ═══════════════════════════════════════════════════════════ -->
    <Window.Resources>
        <conv:ConnectionStatusToBrushConverter x:Key="StatusToBrush"/>
    </Window.Resources>

    <!-- ═══════════════════════════════════════════════════════════
         ROOT LAYOUT
         Vertically-centered content card with refined typography
         and balanced spacing for a professional audio-tool aesthetic.
         ═══════════════════════════════════════════════════════════ -->
    <Border Padding="40,32"
            Background="#222225">

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="20">

                <!-- ─────────────────────────────────────────────────
                     1. HEADING
                     Application identity — subtle, not overpowering.
                     ───────────────────────────────────────────────── -->
                <TextBlock Text="SoundBoard"
                           TextAlignment="Center"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#D4D4D4"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,2"/>

                <!-- ─────────────────────────────────────────────────
                     2. INSTRUCTIONAL LABEL
                     Two-line blockquote style with softer foreground.
                     ───────────────────────────────────────────────── -->
                <TextBlock TextAlignment="Center"
                           FontSize="13"
                           Foreground="#8A8A8A"
                           LineHeight="20"
                           HorizontalAlignment="Center"
                           MaxWidth="320">
                    <Run Text="Please ensure a Wwise project is open"/>
                    <LineBreak/>
                    <Run Text="before connecting."/>
                </TextBlock>

                <!-- ─────────────────────────────────────────────────
                     3. CONNECT BUTTON
                     Muted accent colour, balanced padding. Blends
                     into the dark theme without jarring contrast.
                     ───────────────────────────────────────────────── -->
                <Button Content="Connect to Project"
                        Command="{Binding ConnectToWwiseCommand}"
                        HorizontalAlignment="Center"
                        Padding="28,10"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#E0E0E0"
                        Background="#3A6EA5"
                        CornerRadius="4"
                        Cursor="Hand"/>

                <!-- ─────────────────────────────────────────────────
                     4. STATUS LABEL
                     Subtle, small — sits below the button without
                     competing for attention.
                     ───────────────────────────────────────────────── -->
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{Binding Status, Converter={StaticResource StatusToBrush}}"
                           TextAlignment="Center"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Opacity="0.85"
                           Margin="0,2,0,0"/>

            </StackPanel>
    </Border>
</Window>
